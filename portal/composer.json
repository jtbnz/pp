{
    "name": "puke-fire/portal",
    "description": "Puke Volunteer Fire Brigade Member Portal - A mobile-first PWA for calendar, notices, and leave management",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Puke Fire Brigade",
            "email": "admin@kiaora.tech"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-sqlite3": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-gmp": "*",
        "minishlink/web-push": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Portal\\": "src/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Portal\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "serve": "php -S localhost:8080 -t public",
        "db:init": "php scripts/init-database.php",
        "db:seed": "php scripts/seed-database.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
